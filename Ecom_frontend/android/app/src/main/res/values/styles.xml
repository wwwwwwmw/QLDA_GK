<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme used for the activity that displays the Android view of the Flutter UI. -->
    <!-- SỬA DÒNG SAU: Thay thế "Theme.AppCompat.Light.NoActionBar" bằng Material Components -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Show the app's content while the splash screen is auto-fading -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- Theme to apply to the Android splash screen when the Activity is first created. -->
    <!-- SỬA DÒNG SAU: Thay thế "Theme.AppCompat.Light.NoActionBar" bằng Material Components -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Show the app's content while the splash screen is auto-fading -->
        <item name="android:windowBackground">@drawable/launch_background</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
</resources>
